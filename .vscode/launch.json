{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "jekyll serve recent",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "bundle",
      "runtimeArgs": ["exec", "jekyll", "serve", "--watch", "--drafts", "--limit_posts", "5", "--livereload"],
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "Server address: https?://127.0.0.1:([0-9]+)",
        "uriFormat": "http://localhost:%s"
      }
    },
    {
      "name": "jekyll serve all",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "bundle",
      "runtimeArgs": ["exec", "jekyll", "serve", "--watch", "--drafts", "--livereload"],
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "Server address: https?://127.0.0.1:([0-9]+)",
        "uriFormat": "http://localhost:%s"
      }
    }
  ]
}
